<h3 class="text-center">Brows your local Coaches in your city</h3>
<% @coaches.each do |coach| %>
  <div class="panel panel-default">
    <% coach.each do |key, detail| %>
      <% @coach_count = @coach_count + 1 %>
      <ul class="media-list md-6">
        <li class="media">
          <div class="media-left">
            <%= link_to(image_tag(detail[:image], class: "media-object"), coaches_path + "/#{@coach_count-1}" ) %>
          </div>
          <div class="media-body md-6">
            <h4 class="card-title"><%= detail[:name] %></h4>
            <h5 class="card-title"><%= detail[:city] %></h5>
            <p class="card-text"><%= detail[:description] %></p>
            <%= link_to('Visit the Profile', coaches_path + "/#{@coach_count-1}",class: "btn-link" ) %>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
<% end %>