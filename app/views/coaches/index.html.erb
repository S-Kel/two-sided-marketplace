
<h3 class="text-center">Find a Coach in your city</h3>
<%# Remove @coach_count
    This line will get replace with categories from Sport Table in data  
  %>
<% @coach_count = 0 %>   
<% @coaches.each do |coach| %>
  <div class="panel panel-default show-panel">    
    <% coach.each do |key, detail| %>  
       <% @coach_count = @coach_count + 1 %>   
      <div class="row">         
        <div class="col-md-3">
          <div class="img-thumbnail thumbnail">
            <%= link_to(image_tag(detail[:image]), coaches_path + "/#{@coach_count-1}" ) %>            
          </div>       
        </div>   
        <div class="col-md-9">
          <h3 class="media-heading"><%= detail[:name] %></h3>
          <h4><%= detail[:city] %></h4>
          <p class="card-text"><%= detail[:description] %></p>
          <%= link_to('Visit the Profile', coaches_path + "/#{@coach_count}",class: "btn-link" ) %>
        </div>    
      </div>      
    <% end %>     
  </div>
<% end %>