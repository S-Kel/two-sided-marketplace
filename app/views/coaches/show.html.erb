
<div class="panel panel-default">
  <div class="media">
    <% @coach.each do |item, detail| %>
      <div class="media-left media-middle">
        <%= image_tag(detail[:image], class: "media-object", alt: "Profile image") %>

        <div class="panel">
          <div class="card">
            <div class="card-block">
              <h4 class="card-title text-center"><%= "#{detail[:expertise]} Coach" %></h4>
              <p class="lead text-center">*****</p>
            </div>
          </div>
      </div>

      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= detail[:name] %></h4>
        <h5 class="p-2"><%= detail[:city] %></h5>
        <p class="p-2"><%= detail[:description] %></p>
        <p class="text-center bg bg-danger py-5">Au$50/hr</p>
        <%= link_to('Back', root_path, class: "btn btn-info" ) %>
        <%= link_to('Add to Cart', 
                     coaches_path, 
                     class: "btn btn-warning pull-right", 
                     id: 'add-to-cart' ) %>
        <%= link_to('Book Now', 
                     coaches_path, 
                     class: "btn btn-active pull-right",
                     id: 'book-now' ) %>
      </div>
    <% end %>
  </div>
</div>