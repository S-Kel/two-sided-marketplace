



<%= link_to 'New Trainer', new_trainer_path %>

<h3 class="text-center">Brows your local Coaches in your city</h3>
<% @trainers.each do |trainer| %>
  <div class="panel panel-default">
      <ul class="media-list md-6">
        <li class="media">
          <div class="media-left">
            <%= image_tag(trainer.avatar.url(:medium), class: "media-object") %>

          </div>
          <div class="media-body md-6">
            <h4 class="card-title"><%= trainer.first_name %></h4>
            <h4 class="card-title"><%= trainer.first_name %></h4>
            <h5 class="card-title"><%= "brisbane" %></h5>
            <p class="card-text"><%= trainer.phone %></p>
            <p class="card-text"><%= trainer.bio %></p>
            <%= link_to('Visit the Profile', trainer_path(trainer), class: "btn-link" ) %>
          </div>
        </li>
      </ul>
  </div>
<% end %>
