
<%= simple_form_for(@trainer) do |f| %>

  <div class="form-inputs">
    <%= f.input :first_name, class: "form-control" %>
    <%= f.input :last_name, class: "form-control" %>
    <%= f.input :phone, class: "form-control" %>
    <%= f.input :bio, as: :text, class: "form-control" %>
    <%= f.input :experience, class: "form-control" %>
    <%= f.input :photo, class: "form-control" %>
    <%= f.input :user_id %>
    <%= f.input :account_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-normal" %>
  </div>
<% end %>
<br />
