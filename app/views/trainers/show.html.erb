    <div class="panel panel-default">
        <div class="media">
        <div class="media-left media-middle">
            <%= image_tag @trainer.avatar.url(:medium), class: "media-object" %>
        </div>
           

       <div class="media-body">
        <h4 class="media-heading"><%= @trainer.first_name %> &nbsp; <%= @trainer.last_name %></h4>
