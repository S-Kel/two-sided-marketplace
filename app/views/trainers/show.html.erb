        <p class="p-2"><%= @trainer.bio %></p>
        <p class="p-2"><%= @trainer.phone %></p>
        <p class="p-2"><%= @trainer.experience %></p>
        <p class="text-center bg bg-danger py-5">Au$50/hr</p>
        <%= link_to('Back', root_path, class: "btn btn-info" ) %>
